<?xml version="1.0" encoding="UTF-8"?>
<configuration
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_1.xsd
        http://www.exoplatform.org/xml/ns/kernel_1_1.xsd"
        xmlns="http://www.exoplatform.org/xml/ns/kernel_1_1.xsd">

  <!--regis service to container-->
  <component>
    <key>org.exoplatform.com.opendocument.service.DocumentTypeService</key>
    <type>org.exoplatform.com.opendocument.service.impl.DocumentTypeServiceImpl</type>
    <init-params>
      <!--Open Document In Office-->
      <object-param>
        <name>word</name>
        <object type="org.exoplatform.com.opendocument.service.enties.DocumentType" >
          <field name="resourceBundleKey" ><string>OpenDocumentInOffice.label.exo.remote-edit.word</string></field>
          <field name="iconClass" ><string>uiIcon16x16applicationmsword</string></field>
          <field name="mimeTypes" >
            <collection type="java.util.ArrayList">
              <value><string>docx</string></value>
              <value><string>doc</string></value>
              <value><string>docm</string></value>
              <value><string>dot</string></value>
              <value><string>dotm</string></value>
              <value><string>dotx</string></value>
            </collection>
          </field>
        </object>
      </object-param>

      <object-param>
        <name>excel</name>
        <object type="org.exoplatform.com.opendocument.service.enties.DocumentType" >
          <field name="resourceBundleKey" ><string>OpenDocumentInOffice.label.exo.remote-edit.excel</string></field>
          <field name="iconClass" ><string>uiIcon16x16applicationxls</string></field>
          <field name="mimeTypes" >
            <collection type="java.util.ArrayList">
              <value><string>xltx</string></value>
              <value><string>xltm</string></value>
              <value><string>xlt</string></value>
              <value><string>xlsx</string></value>
              <value><string>xlsm</string></value>
              <value><string>xlsb</string></value>
              <value><string>xls</string></value>
              <value><string>xll</string></value>
              <value><string>xlam</string></value>
              <value><string>xla</string></value>
            </collection>
          </field>
        </object>
      </object-param>

      <object-param>
        <name>powerpoint</name>
        <object type="org.exoplatform.com.opendocument.service.enties.DocumentType" >
          <field name="resourceBundleKey" ><string>OpenDocumentInOffice.label.exo.remote-edit.powerpoint</string></field>
          <field name="iconClass" ><string>uiIcon16x16applicationvndopenxmlformats-officedocumentpresentationmlpresentation</string></field>
          <field name="mimeTypes" >
            <collection type="java.util.ArrayList">
              <value><string>pptx</string></value>
              <value><string>pptm</string></value>
              <value><string>ppt</string></value>
              <value><string>ppsx</string></value>
              <value><string>ppsm</string></value>
              <value><string>pps</string></value>
              <value><string>ppam</string></value>
              <value><string>ppa</string></value>
              <value><string>potx</string></value>
              <value><string>potm</string></value>
              <value><string>pot</string></value>
            </collection>
          </field>
        </object>
      </object-param>

    </init-params>
  </component>

  <component>
    <type>org.exoplatform.com.opendocument.service.rest.OpenInOfficeConnector</type>
  </component>

  <!--regis to container-->
  <external-component-plugins>
    <target-component>org.exoplatform.commons.addons.AddOnService</target-component>
    <component-plugin>
      <name>addPlugin</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.commons.addons.AddOnPluginImpl</type>
      <description></description>
      <init-params>
        <value-param>
          <name>priority</name>
          <value>5</value>
        </value-param>
        <value-param>
          <name>containerName</name>
          <value>left-topNavigation-container</value>
        </value-param>
        <object-param>
          <name>open-document</name>
          <description></description>
          <object type="org.exoplatform.portal.config.serialize.PortletApplication">
            <field name="state">
              <object type="org.exoplatform.portal.config.model.TransientApplicationState">
                <field name="contentId">
                  <string>open-document/OpenDocument</string>
                </field>
              </object>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

</configuration>
